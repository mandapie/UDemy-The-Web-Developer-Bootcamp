<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" placeholder="title" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" placeholder="image" required>
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="blog[body]" placeholder="content" required><%= blog.body %></textarea>
        </div>
        <button class="ui violet basic button" type="submit">Edit</button>
    </form>
</div>

<% include partials/footer %>