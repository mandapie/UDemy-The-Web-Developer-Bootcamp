<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center;">Edit Campground</h1>
    <div style="max-width:450px; margin:0 auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" placeholder="image url"  value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[price]" placeholder="price/night"  value="<%= campground.price %>">
            </div>
            <div class="form-group">
                <input id="location" class="form-control" type="text" name="campground[location]" placeholder="location"  value="<%= campground.location %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="campground[description]" placeholder="description"><%= campground.description %></textarea>
            </div>
            <button class="btn btn-primary btn-block" type="submit">Edit</button>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>